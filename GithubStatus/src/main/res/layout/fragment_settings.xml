<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
            android:id="@+id/settings_primary_text"
            style="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@+id/setting_gcm_switch"
            android:layout_toStartOf="@+id/setting_gcm_switch"
            android:text="@string/settings_push_notifications"/>

    <TextView
            android:id="@+id/settings_secondary_text"
            style="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/settings_primary_text"
            android:layout_toLeftOf="@+id/setting_gcm_switch"
            android:layout_toStartOf="@+id/setting_gcm_switch"
            android:text="@string/settings_push_notifications_description"/>

    <Switch
            android:id="@+id/setting_gcm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

</RelativeLayout>